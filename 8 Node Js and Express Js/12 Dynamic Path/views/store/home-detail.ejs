<%- include('../partials/head') %>
</head>
<body class="min-h-screen bg-gradient-to-br from-blue-100 via-white to-blue-200">
  <%- include('../partials/nav') %>
  <main class="py-16 px-4">
    <div class="container mx-auto max-w-5xl">
      <!-- <h1 class="text-6xl font-extrabold text-blue-800 mb-16 text-center tracking-tight drop-shadow-lg">Home Details</h1> -->
      
      <!-- Inspiring Home Quotes Section -->
      <div class="mb-10">
        <div class="bg-blue-50 border-l-4 border-blue-400 p-6 rounded-2xl shadow-md max-w-3xl mx-auto">
          <p class="text-xl italic text-blue-800 mb-2 text-center">
            "Home is the starting place of love, hope and dreams."
          </p>
          <p class="text-lg italic text-blue-700 mb-2 text-center">
            "There is nothing more important than a good, safe, secure home."
          </p>
        </div>
        <div class="mt-6 text-center">
          <span class="text-2xl font-bold text-green-700">
            Find your place. Build your story. <span class="text-blue-700">Welcome home!</span>
          </span>
        </div>
      </div>
      <!-- End Quotes Section -->

      <!-- Improved Home Card -->
      <div class="bg-white/95 rounded-[2.5rem] shadow-3xl p-0 flex flex-col md:flex-row gap-0 items-stretch border border-blue-100 overflow-hidden transition-all duration-300 hover:shadow-[0_8px_40px_0_rgba(30,64,175,0.15)]">
        <!-- Image Section -->
        <div class="w-full md:w-1/2 flex flex-col items-center bg-gradient-to-br from-blue-100 via-white to-blue-200 p-8 md:p-10 justify-center">
          <div class="relative w-full h-80 md:h-[28rem] flex items-center justify-center">
            <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" class="w-full h-full object-cover rounded-2xl shadow-2xl border-4 border-blue-200 transition-transform duration-300 hover:scale-105 ring-4 ring-blue-100">
          </div>
        </div>
        <!-- Details Section -->
        <div class="w-full md:w-1/2 flex flex-col gap-8 p-10 md:p-14 bg-white/95 justify-center">
          <h2 class="text-5xl font-extrabold text-gray-900 mb-2 tracking-tight flex items-center gap-3 drop-shadow-lg">
            <svg class="w-12 h-12 text-blue-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0h6"/>
            </svg>
            <span class="bg-gradient-to-r from-blue-600 via-blue-400 to-blue-600 bg-clip-text text-transparent"><%= home.houseName %></span>
          </h2>
          <div class="flex flex-wrap gap-6 mb-2">
            <div class="flex items-center text-lg bg-yellow-50 px-5 py-2.5 rounded-xl shadow-md border border-yellow-100">
              <svg class="w-7 h-7 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
              <span class="ml-2 text-gray-700 font-semibold"><%= home.rating %>/5</span>
            </div>
            <div class="flex items-center text-lg bg-blue-50 px-5 py-2.5 rounded-xl shadow-md border border-blue-100">
              <svg class="w-7 h-7 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              <span class="ml-2 text-gray-700 font-semibold"><%= home.location %></span>
            </div>
          </div>
          <div class="flex items-center text-4xl font-extrabold text-blue-700 mb-4 bg-gradient-to-r from-blue-100 via-blue-200 to-blue-100 px-8 py-4 rounded-2xl shadow-inner w-fit border border-blue-200">
            <span>Rs <%= home.price %></span>
          </div>
          <% if (home.description) { %>
            <div class="text-gray-700 text-lg bg-gray-50 rounded-2xl p-8 shadow-inner border border-gray-200 leading-relaxed">
              <%= home.description %>
            </div>
          <% } %>
          <div class="flex gap-4 mt-8">
            <%- include('../partials/add-to-favourite') %>
          </div>
        </div>
      </div>
      <!-- End Improved Home Card -->
    </div>
  </main>
</body>
</html>